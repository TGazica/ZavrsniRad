<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:background="#757575">

    <TextView
        android:id="@+id/itemDrinkName"
        android:text="@string/drink_name"
        android:textSize="25sp"
        android:textColor="#FFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"/>

    <TextView
        android:id="@+id/itemDrinkSize"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/itemDrinkName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:textSize="25sp"
        android:textColor="#FFF"/>

    <TextView
        android:id="@+id/itemDrinkPrice"
        android:text="@string/item_drink_price"
        android:textSize="25sp"
        android:textColor="#FFF"
        app:layout_constraintEnd_toStartOf="@id/itemDrinkRemoveDrink"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/itemDrinkAddDrink"
        android:background="@drawable/plus_circle"
        android:backgroundTint="#FFF"
        android:contentDescription="@string/drink_item_add_drink"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="8dp"/>

    <TextView
        android:id="@+id/itemDrinkNumberOfDrinks"
        android:text="@string/item_number_hint"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:textColor="#FFF"
        android:gravity="center"
        android:textSize="25sp"
        android:layout_marginEnd="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/itemDrinkAddDrink" />

    <ImageView
        android:id="@+id/itemDrinkRemoveDrink"
        android:background="@drawable/minus_circle"
        android:backgroundTint="#FFF"
        android:contentDescription="@string/drink_item_add_drink"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintEnd_toStartOf="@id/itemDrinkNumberOfDrinks"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="8dp"/>


</android.support.constraint.ConstraintLayout>